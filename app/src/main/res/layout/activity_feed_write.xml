<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedWrite_Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal"
                android:background="@drawable/layout_divider">
                <ImageButton
                    android:background="@color/transparent"
                    android:id="@+id/back_feedwrite"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center|start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    app:srcCompat="@drawable/arrowback" />

                <TextView
                    android:id="@+id/feed_date"
                    android:gravity="center|start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="날짜" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/FeedMapLayout"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/feedmap"
                    android:name="com.naver.maps.map.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    tools:layout="@android:layout/activity_list_item" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/brightgray"
                            android:id="@+id/textView4"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="100dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="picture" />

                        <FrameLayout
                            android:background="@drawable/plusbtn"
                            android:layout_marginHorizontal="40dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">

                            <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/viewpager"
                                android:layout_gravity="center"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:layout_marginBottom="10dp"/>

                            <me.relex.circleindicator.CircleIndicator3
                                android:id="@+id/indicator"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginBottom="10dp"
                                android:layout_gravity="bottom"/>
                        </FrameLayout>


                        <EditText
                            android:background="@null"
                            android:gravity="start"
                            android:id="@+id/record_feedwrite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="50dp"
                            android:padding="10dp"
                            android:hint="기록을 남겨주세요"
                            android:textSize="15dp"/>

                        <ListView
                            android:layout_marginHorizontal="40dp"
                            android:dividerHeight="0dp"
                            android:divider="@color/transparent"
                            android:id="@+id/loclist_feed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>

                        <Button
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="50dp"
                            android:background="@drawable/orangebtn"
                            android:id="@+id/button6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="완료" />


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackbox_feed"
            android:background="@drawable/black_radius"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="249dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <Button
                    android:id="@+id/emotion"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="감정"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/weather"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/weather"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="날씨"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView9"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="이동거리"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/distext_feed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.622" />

                <TextView
                    android:id="@+id/distext_feed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="1.232 Km"
                    android:textColor="@color/feedgreen"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.511" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/feedstep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000 걸음"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/feed_time"
                    app:layout_constraintHorizontal_bias="0.754"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.448" />

                <TextView
                    android:id="@+id/feed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="92dp"
                    android:text="21:30 ~ 22:00"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.448" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>