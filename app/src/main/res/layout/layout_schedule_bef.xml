<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingVertical="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/gray_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/title_schedulebef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="약속 제목(채팅 제목과 동일)" />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/calendar_icon"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:paddingHorizontal="10dp"
                android:gravity="center|start"
                android:id="@+id/date_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022/10/10 10:20 \n~ 2022/10/11 11:20" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@drawable/orangebtn"
                android:layout_margin="10dp"
                android:id="@+id/gochat_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="채팅방" />

            <Button
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@drawable/orangebtn"
                android:layout_margin="10dp"
                android:id="@+id/golocation_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="위치 확인" />

            <Button
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@drawable/orangebtn"
                android:layout_margin="10dp"
                android:id="@+id/gouser_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="참가자" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>